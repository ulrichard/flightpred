#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1




configure: configure-stamp
configure-stamp:
	dh_testdir
	# Add here commands to configure the package.

	touch configure-stamp


build: build-stamp

build-stamp: configure-stamp  
	dh_testdir	

	# Add here commands to compile the package.
	mkdir -p $(CURDIR)/build-debian
	(cd $(CURDIR)/build-debian; cmake -DCMAKE_VERBOSE_MAKEFILE:BOOL=1 -DCMAKE_INSTALL_PREFIX:PATH=/usr -DCONFIGDIR:PATH=/etc/flightpred/ -DWT_CMAKE_FINDER_INSTALL_DIR:PATH=/share/cmake-2.6/Modules -DCMAKE_BUILD_TYPE:STRING=Release -DCMAKE_SKIP_RPATH:BOOL=1 -DWEBUSER:STRING=www-data -DWEBGROUP:STRING=www-data ..)

	(cd $(CURDIR)/build-debian; $(MAKE) )
	touch $@

clean: 
	dh_testdir
	dh_testroot
	rm -f build-stamp configure-stamp

	# Add here commands to clean up after the build process.
	# $(MAKE) clean
	rm -rf $(CURDIR)/build-debian
	rm -rf $(CURDIR)/debian/tmp
	rm -rf $(CURDIR)/debian/flightpred

	# this is an attempt to handle the different dependencies between debian and ubuntu in one set of files without the need for two separate branches
	ifeq ($(shell dpkg-vendor --derives-from Ubuntu && echo yes),yes)
		sed -i 's/\$\x7Bdist\x3ABuild-Depends\x7D/libboost-regex-dev, libboost-program-options-dev, libboost-date-time-dev, libboost-signals-dev, libboost-thread-dev, libboost-system-dev, libboost-filesystem-dev, libboost-serialization-dev, libboost-test-dev, postgresql-contrib-8.4/' $(CURDIR)/debian/control
	else
		sed -i 's/\$\x7Bdist\x3ABuild-Depends\x7D/libboost-regex1.42-dev, libboost-program-options1.42-dev, libboost-date-time1.42-dev, libboost-signals1.42-dev, libboost-thread1.42-dev, libboost-system1.42-dev, libboost-filesystem1.42-dev, libboost-serialization1.42-dev, libboost-test1.42-dev, postgresql-contrib-8.3/' $(CURDIR)/debian/control
	endif

	dh_clean 

install: build
	dh_testdir
	dh_testroot
	dh_prep  
	dh_installdirs

	# Add here commands to install the package into debian/flightpred.
	# $(MAKE) DESTDIR=$(CURDIR)/debian/flightpred install
	(cd $(CURDIR)/build-debian; $(MAKE) install DESTDIR=$(CURDIR)/debian/flightpred/ )

	for TASK in install upgrade; do \
		mkdir -p $(CURDIR)/debian/flightpred/usr/share/dbconfig-common/scripts/flightpred/$$TASK; \
		/bin/echo -e "#!/bin/sh\nsu postgres -c /usr/lib/flightpred/$${TASK}_database" > $(CURDIR)/debian/flightpred/usr/share/dbconfig-common/scripts/flightpred/$$TASK/pgsql; \
		chmod 700 $(CURDIR)/debian/flightpred/usr/share/dbconfig-common/scripts/flightpred/$$TASK/pgsql; \
	done


# Build architecture-independent files here.
binary-indep: build install
# We have nothing to do by default.

# Build architecture-dependent files here.
binary-arch: build install
	dh_testdir
	dh_testroot
	dh_installchangelogs 
	dh_installdocs
	dh_installexamples
	dh_install --sourcedir=debian/flightpred/
#	dh_installmenu
#	dh_installdebconf
#	dh_installlogrotate
#	dh_installemacsen
#	dh_installpam
#	dh_installmime
#	dh_python
#	dh_installinit
	dh_installcron
#	dh_installinfo
	dh_installman
	dh_lintian
	dh_link
	dh_strip
	dh_compress
#	dh_perl
	dh_makeshlibs -pflightpred -V'flightpred (>= 0.0.15)'
	dh_shlibdeps -a
	dh_fixperms
	dh_installdeb
	# this is an attempt to handle the different dependencies between debian and ubuntu in one set of files without the need for two separate branches
	ifeq ($(shell dpkg-vendor --derives-from Ubuntu && echo yes),yes)
		DEPENDS=postgresql-contrib-8.4, postgresql-8.4-postgis
	else
		DEPENDS=postgresql-contrib-8.3, postgresql-8.3-postgis
	endif
	dh_gencontrol -- -Vdist:Depends='$(BUILDDEP)'
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
