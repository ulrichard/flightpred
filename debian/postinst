#!/bin/bash
# postinst script for flightpred

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

. /usr/share/debconf/confmodule
#. /usr/share/dbconfig-common/dpkg/postinst.pgsql
#dbc_go flightpred $@


case "$1" in
	configure)
        #Create flightpred admin user
		if ! grep -q "^flightpred:" /etc/passwd ; then
		    adduser --gecos 0 --disabled-password flightpred
		    # Remove any old crontab entries if this account have had any before
		    su flightpred -c "crontab -r" 2> /dev/null || true
		fi
		echo 'PATH=$PATH:/usr/lib/flightpred/' >> /home/flightpred/.bashrc
	
		# Generate config file
		if [ ! -f /etc/flightpred.conf ]; then
		    echo "database = flightpred" > /etc/flightpred.conf
		    PORT=`pg_lsclusters -h | grep main | xargs echo | cut -d' ' -f3`
		    echo "port = $PORT" >> /etc/flightpred.conf
		    echo "user = flightpred" >> /etc/flightpred.conf

#			su postgres -c "psql -c \"ALTER USER $DB_USER WITH SUPERUSER\"" #>> /dev/null
			sudo -u postgres psql -e -a -c "DROP DATABASE IF EXISTS flightpred"
			sudo -u postgres psql -e -a -c "CREATE USER flightpred WITH PASSWORD 'flightpred' SUPERUSER"
			sudo -u flightpred createdb -e flightpred
			sudo -u flightpred createlang plpgsql flightpred
			sudo -u flightpred psql -e -a -d flightpred -f /usr/share/postgresql-8.3-postgis/lwpostgis.sql
			sudo -u flightpred psql -e -a -d flightpred -f /usr/share/postgresql-8.3-postgis/spatial_ref_sys.sql
			#sudo -u flightpred psql -e -a -c "ALTER DATABASE flightpred OWNER TO flightpred"
			sudo -u flightpred psql -e -a -d flightpred -f /usr/share/flightpred/create_flightpred_db.sql
			sudo -u postgres psql -e -a -c "ALTER ROLE flightpred NOSUPERUSER
" 
		fi
	

		# set up the environment for the webapp
		mkdir -p /var/run/flightpred
    		chown -R www-data:www-data /var/run/flightpred

		if ! grep -q "^flightpred:" /etc/wt/wt_config.xml ; then
			chmod +x /usr/share/flightpred/append_wt_config.pl
			/usr/share/flightpred/append_wt_config.pl > /etc/wt/wt_config.xml.new
			mv /etc/wt/wt_config.xml /etc/wt/wt_config.xml.old
			mv /etc/wt/wt_config.xml.new /etc/wt/wt_config.xml
		fi

		# register with apache
		a2enmod fastcgi
		echo "register flightpred with apache"
		a2ensite flightpred.conf 
		/etc/init.d/apache2 reload
		;;
	*)
		#
		# Unknown action - do nothing.
		#
		exit 0
		;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#
